<?xml version="1.0" encoding="utf-8" ?>
<xam:NiftyCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:touch="clr-namespace:AppoMobi.Touch"
                 xmlns:xam="clr-namespace:AppoMobi.Xam"
                 x:Class="AppoMobi.CellDay">

    <ContentView
        BackgroundColor="DarkGray">


      <touch:GesturesGrid Margin="0.25, 0, 0.25, 0.5"
            x:Name="cControl"

            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            Tapped="OnTapped_Cell">

            <touch:GesturesGrid x:Name="SelectionBox" HorizontalOptions="Fill" VerticalOptions="Fill" Padding="0"/>

        <Label            
           Margin="0,4,0,4"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="txtText"
            Text="✓"
            FontSize="15" 
           TextColor="DimGray"
            />

        <!--<Frame 
            BorderColor="Red"
            HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>-->

  
      </touch:GesturesGrid>




    </ContentView>

  </xam:NiftyCell>


